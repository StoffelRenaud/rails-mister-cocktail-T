<h1>
  <%= @cocktail.name %>
</h1>
<div class="container">
  <div class="row">
    <div class="col-xs-6">
      Ingrédients :
      <% @cocktail.ingredients.each do |ingredient| %>
        <%= ingredient.name %>
      <% end %>
    </div>
    <div class="col-xs-6">
      Quantités :
      <% @cocktail.doses.each do |dose| %>
        <%= dose.description %>
      <% end %>
    </div>
  </div>
</div>
<%= link_to 'Add a dose', new_cocktail_dose_path(@cocktail) %>
