
<div class="container" style = "padding-top: 70px;">
  <div class="row">
    <div class="col-xs-5">
      <p>Ingrédients :</p>
      <ul>
      <% @cocktail.ingredients.each do |ingredient| %>
        <li><%= ingredient.name %></li>
      <% end %>
      </ul>
      <p>Quantités :</p>
      <ul>
      <% @cocktail.doses.each do |dose| %>
        <li><%= dose.description %></li>
      <% end %>
      </ul>
      <%= link_to 'Add a dose', new_cocktail_dose_path(@cocktail), class: 'btn' %>
    </div>
    <div class="col-xs-7">
      <h3><%= @cocktail.name %></h3>
      <%= cl_image_tag @cocktail.photo, height: 300, width: 400, crop: :fill %>
    </div>
  </div>
</div>







